<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Page Title</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <!-- <link rel='stylesheet' type='text/css' media='screen' href='main.css'> -->
</head>
<body>

  <div data-question-holder>
    <p data-question question="question_3">Quer levar um socao ?</p>
    <input data-answer type="text">
    <button data-submit type="button">Submit</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
  <script>
    (function() {

      const button = document.querySelector('[data-submit]');
      let question = null;
      let answer = null;

      button.addEventListener('click', () => {
        question = document.querySelector('[data-question]').getAttribute('question');
        answer = document.querySelector('[data-answer]').value;

        axios.get(`/api?question=${question}&answer=${answer}`)
          .then((response) => {
            console.log(response);

            if (response.data.result) {
              console.log(`%cVem pro pau`, 'color: red; font-size: 20px; font-weight: bold');
            }
          })
      })

    })();
  </script>
</body>
</html>